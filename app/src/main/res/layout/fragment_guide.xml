<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.GuideFragment"
    android:background="#fff">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="117dp">


        <View
            android:layout_width="180dp"
            android:layout_height="230dp"
            android:background="@color/g_blue"></View>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:elegantTextHeight="true"
            android:text="@string/guide_title"
            android:textColor="#000"
            android:textSize="20sp" />
    </FrameLayout>

    <kr.co.prnd.YouTubePlayerView
        android:id="@+id/you_tube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="@string/guide_description_eng"
                android:textColor="#000"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_lang"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                android:background="#DF8257"
                android:backgroundTint="#649AE6"
                android:fontFamily="sans-serif-medium"
                android:text="한국어" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>